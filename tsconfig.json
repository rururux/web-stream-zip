{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [ "dom" ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [ "index.ts", "src/**/*" ],
  "exclude": [ "node_modules" ],
  "references": [
    { "path": "./tests/node/tsconfig.node.json" },
    { "path": "./tests/deno/tsconfig.deno.json" }
  ],
  "esModuleInterop": true,
}
