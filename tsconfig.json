{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "rootDir": "./",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
  },
  "exclude": [ "node_modules" ],
  "references": [
    { "path": "./tsconfig.main.json" },
    { "path": "./tests/node/tsconfig.node.json" },
    { "path": "./tests/deno/tsconfig.deno.json" },
    { "path": "./tests/browser/tsconfig.browser.json" }
  ],
  "esModuleInterop": true,
}
