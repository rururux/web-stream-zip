{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ES2022",
    "lib": [ "dom" ],
    "types": [ "node" ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["index.ts", "src/**/*", "test/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "esModuleInterop": true,
}
